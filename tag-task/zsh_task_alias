local task_dir=$(grep "data.location" $HOME/.taskrc | cut -d "=" -f 2)
local task_dir=$(sed "s|~|$HOME|" <<< $task_dir)

alias t='task'

ts() {
    (
    cd $task_dir

    git commit -a $mode -m "$(hostname): $(date -Iseconds)"
    git pull --rebase origin master
    git push origin master
    )
}

tc() {
    (
    cd $task_dir

    git commit -a $mode -m "$(hostname): $(date -Iseconds)"
    )
}

tcd() {
    cd $task_dir
}
