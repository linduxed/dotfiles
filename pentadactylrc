loadplugins

" Import the colemak settings.
source ~/.pentadactyl/colemak.pentadactyl

colorscheme simple_dark

" New tabs have a black background.
style -group=user -name=black_new_tab chrome://* xul|browser { background-color: black; }

" Set the default search engine
set defsearch=duck

" Remap page zoom to text zoom
map zi zI
map zo zO

set showtabline=always

" Option from the Tab Options plugin
" set tabclose=right,opener,previous,left
