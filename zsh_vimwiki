local wiki_dir="$HOME/vimwiki"

wiks() {
    (
    cd $wiki_dir

    git add . &&
    git commit -m "$(hostname): $(date -Iseconds)" &&
    git pull --rebase &&
    git push
    )
}

wikc() {
    (
    cd $wiki_dir

    git add . &&
    git commit -m "$(hostname): $(date -Iseconds)"
    )
}

wikcd() {
    cd $wiki_dir
}

wiko() {
    cd $wiki_dir
    nice nvim -c "VimwikiIndex"
}
